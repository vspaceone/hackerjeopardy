{
  "root": true,
  "ignorePatterns": [
    "projects/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": "src/tsconfig.app.json"
      },
      "plugins": [
        "@typescript-eslint"
      ],
      "rules": {
        "quotes": [
          "error",
          "single"
        ],
        "semi": [
          "error",
          "always"
        ],
        "max-len": [
          "error",
          {
            "code": 140
          }
        ],
        "no-console": "off",
        "prefer-const": "error"
      }
    },
    {
      "files": [
        "*.html"
      ],
      "parser": "@angular-eslint/template-parser",
      "plugins": [
        "@angular-eslint/template"
      ],
      "rules": {}
    }
  ]
}